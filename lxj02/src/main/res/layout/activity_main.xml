<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hzyc.lxj.lxj02.MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:background="#f11e0b"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/topright" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/photo"
            android:layout_toRightOf="@+id/photo"
            android:text="一卡中国" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/input" />

        <TextView
            android:id="@+id/soushuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_toEndOf="@+id/editText"
            android:layout_toRightOf="@+id/editText"
            android:text="搜索" />/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:background="#f1a9a9">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
          >
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:id="@+id/p1"
                   android:src="@drawable/nicefood"
                   android:layout_gravity="center"
                   android:layout_below="@+id/relativeLayout"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true" />
               <TextView
                   android:id="@+id/t1"
                   android:layout_width="30dp"
                   android:layout_height="20dp"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center"
                   android:text="美食" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:id="@+id/p2"
                   android:src="@drawable/playfun"
                   android:layout_gravity="center"
                   android:layout_below="@+id/relativeLayout"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true" />
               <TextView
                   android:id="@+id/t2"
                   android:layout_width="30dp"
                   android:layout_height="20dp"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center"
                   android:text="娱乐" />
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:orientation="vertical">
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:id="@+id/p3"
                   android:src="@drawable/service"
                   android:layout_gravity="center"
                   android:layout_below="@+id/relativeLayout"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true" />
               <TextView
                   android:id="@+id/t3"
                   android:layout_width="30dp"
                   android:layout_height="20dp"
                   android:layout_centerVertical="true"
                   android:layout_gravity="center"
                   android:text="生活" />
           </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/p4"
                    android:src="@drawable/buythg"
                    android:layout_gravity="center"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/t4"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="购物" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/p5"
                    android:src="@drawable/paymoney"
                    android:layout_gravity="center"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/t5"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="支付" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/p6"
                    android:src="@drawable/newcategory"
                    android:layout_gravity="center"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/meishi"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="商家" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2"
        android:background="#d7d4df">
        <TextView
            android:id="@+id/t7"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"

            android:text="全部" />
    </LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listView">

    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/listView"
        android:background="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
               >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/p7"
                    android:src="@drawable/shouye_on"
                    android:layout_gravity="center"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/t8"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="首页" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/p8"
                    android:src="@drawable/newcar"
                    android:layout_gravity="center"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/t9"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="购物车" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/p9"
                    android:src="@drawable/ic_menu_more_off"
                    android:layout_gravity="center"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/t10"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:text="更多" />
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>
